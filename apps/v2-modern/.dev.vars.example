# Cloudflare Workers用の.dev.varsサンプルファイル
# 実際の値は .dev.vars に設定してください（.dev.varsはGitにコミットされません）

# AIプロバイダ設定（openai / gemini）
# 既定: openai
AI_PROVIDER="openai"

# OpenAI API Key（AI_PROVIDER=openai のとき必須）
# https://platform.openai.com/api-keys から取得
OPENAI_API_KEY="<YOUR_OPENAI_API_KEY>"

# Gemini API Key（AI_PROVIDER=gemini のとき必須）
# https://ai.google.dev/ から取得
GEMINI_API_KEY="<YOUR_GEMINI_API_KEY>"

# モデル指定（必要時のみ）
# AI_MODEL を設定すると、プロバイダに関係なく最優先で使用されます。
# AI_MODEL=""
# OPENAI_MODEL="gpt-4o-mini"
# GEMINI_MODEL="gemini-2.5-flash"

# 実行パラメータ（必要時のみ）
# OpenAI向け（未設定時: timeout=25000ms / retry=1 / max_tokens=900）
# OPENAI_TIMEOUT_MS="25000"
# OPENAI_RETRY_COUNT="1"
# OPENAI_MAX_TOKENS="900"

# Gemini向け（未設定時: timeout=18000ms / retry=0 / max_tokens=700）
# GEMINI_TIMEOUT_MS="18000"
# GEMINI_RETRY_COUNT="0"
# GEMINI_MAX_TOKENS="700"

# Gemini→OpenAI フォールバック（既定: 無効）
# ENABLE_PROVIDER_FALLBACK="0"

# Supabase設定（Phase 3以降で使用予定）
SUPABASE_URL=""
SUPABASE_ANON_KEY=""

# 外部API
WEATHER_API_BASE_URL=""

# Sentry設定（オプション）
SENTRY_DSN=""
SENTRY_ENV="local"
SENTRY_RELEASE="local"

# 機能フラグ
ENABLE_FEEDBACK="1"
ENABLE_CONTEXT_INJECTION="1"
