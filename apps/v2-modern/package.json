{
  "name": "voice-ky-v2",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "dev:workers": "wrangler dev workers/index.ts",
    "build": "tsc -b && vite build",
    "deploy:workers": "wrangler deploy workers/index.ts",
    "deploy:pages": "wrangler pages deploy dist --project-name voice-ky-v2 --commit-dirty=true",
    "security:local": "npm run lint && npm run test && npm run build && npm audit --omit=dev",
    "security:ops": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/security/automate-security-ops.ps1",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:iphone": "npx playwright codegen --device='iPhone 13' http://localhost:5173",
    "test:e2e": "playwright test tests/e2e",
    "test:live": "playwright test tests/e2e/live-ai-chat.spec.ts",
    "test:cost": "playwright test tests/e2e/real-cost-scenario.spec.ts --project=\"Mobile Safari\"",
    "test:cost:preflight": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/security/preflight-live-test.ps1",
    "test:cost:live": "cross-env RUN_LIVE_TESTS=1 playwright test tests/e2e/real-cost-scenario.spec.ts --project=\"Mobile Safari\"",
    "test:cost:ops": "npm run test:cost:preflight && npm run test:cost:live && npm run reports:perf",
    "reports:prune": "node scripts/prune_real_cost_reports.mjs",
    "reports:perf": "node scripts/generate_perf_summary.mjs",
    "test": "vitest run",
    "dev:iphone": "npx concurrently \"npm run dev:host\" \"npm run dev:workers\"",
    "dev:all": "npx concurrently \"npm run dev\" \"npm run dev:workers\"",
    "test:visual": "cross-env VISUAL_MODE=1 playwright test tests/e2e/real-cost-scenario.spec.ts --headed --project=chromium",
    "test:visual:mock": "cross-env VISUAL_MODE=1 DRY_RUN=1 playwright test tests/e2e/real-cost-scenario.spec.ts --headed --project=chromium"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-pdf/renderer": "^4.3.2",
    "@sentry/cloudflare": "^10.38.0",
    "@sentry/react": "^10.38.0",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.3.0",
    "hono": "^4.11.8",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "web-vitals": "^4.2.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "pdfjs-dist": "^5.4.530",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18",
    "wrangler": "^4.60.0"
  }
}
